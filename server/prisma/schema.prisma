generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TicketStatus {
  PENDING
  PROCESSED
  FAILED
  RESOLVED
}

model Ticket {
  id         String       @id @default(uuid())
  content    String
  status     TicketStatus @default(PENDING)
  category   String?
  urgency    String?
  sentiment  Int?
  draftReply String?
  finalReply String?
  error      Json?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  @@index([status])
  @@index([createdAt])
}
